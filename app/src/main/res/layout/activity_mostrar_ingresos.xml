<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".MostrarIngresos">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/tvTituloIngresos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Ingresos"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TARJETA CONTENEDORA -->
    <LinearLayout
        android:id="@+id/layoutTarjeta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:clipToPadding="false"
        android:clipToOutline="false"
        app:layout_constraintTop_toBottomOf="@id/tvTituloIngresos"
        app:layout_constraintBottom_toTopOf="@id/btnRegresarIngresos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LISTVIEW -->
        <ListView
            android:id="@+id/listViewIngresos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2dp"/>
    </LinearLayout>

    <!-- BOTÓN REGRESAR -->
    <Button
        android:id="@+id/btnRegresarIngresos"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Atrás"
        android:textAllCaps="false"
        android:drawableTop="@android:drawable/ic_menu_revert"
        android:backgroundTint="#FFFFFF"
        android:elevation="5dp"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
