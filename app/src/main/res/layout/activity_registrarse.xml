<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrarse">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoAppRegister"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_logo" />

            <!-- Título -->
            <TextView
                android:id="@+id/txtTituloRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Crea tu cuenta"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Nombre -->
            <EditText
                android:id="@+id/editTxtNombreRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_edittext"
                android:hint="Nombre completo"
                android:inputType="textPersonName"
                android:paddingLeft="16dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/editTxtEmailRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="correo@ejemplo.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="16dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/editTxtPassRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="16dp" />

            <!-- Confirmar Password -->
            <EditText
                android:id="@+id/editTxtPassConfirmRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:paddingLeft="16dp" />

            <!-- Botón Registrarse -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#3C763F"
                android:text="Registrarse"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Texto OR -->
            <TextView
                android:id="@+id/txtOrRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="- O regístrate con -"
                android:textColor="#808080" />

            <!-- Botones sociales -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnGoogleRegister"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_social"
                    android:padding="10dp"
                    android:src="@drawable/ic_google"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/bg_social"
                    android:padding="10dp"
                    android:src="@drawable/ic_facebook"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Ir al login -->
            <TextView
                android:id="@+id/txtIrLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="¿Ya tienes cuenta? Inicia sesión"
                android:textColor="#0039CC"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
