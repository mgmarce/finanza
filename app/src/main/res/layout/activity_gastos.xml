<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Gastos">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Agregar"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/layoutBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botones Gastos / Ingresos -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnGastos"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:backgroundTint="#3C763F"
            android:text="Gastos"
            android:elevation="3dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnIngresos"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#DDDDDD"
            android:elevation="3dp"
            android:text="Ingresos"
            android:textColor="#333333"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scroll con categorías -->
    <ScrollView
        android:id="@+id/scrollViewGastos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutBotones"
        app:layout_constraintBottom_toTopOf="@id/btnMostrarGastos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CONTENEDOR BLANCO CON ESTILO -->
        <LinearLayout
            android:id="@+id/layoutGastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- SALUD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_salud"
                    android:contentDescription="Salud" />

                <Button
                    android:id="@+id/btnSaludGasto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Salud"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- SUPERMERCADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_supermercado"
                    android:contentDescription="Supermercado" />

                <Button
                    android:id="@+id/btnSupermercadoGasto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Supermercado"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ENTRETENIMIENTO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_entretenimiento"
                    android:contentDescription="Entretenimiento" />

                <Button
                    android:id="@+id/btnEntretenimientoGasto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Entretenimiento"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- COMBUSTIBLE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_combustible"
                    android:contentDescription="Combustible" />

                <Button
                    android:id="@+id/btnCombustibleGasto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Combustible"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- EDUCACIÓN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_educacion"
                    android:contentDescription="Educación" />

                <Button
                    android:id="@+id/btnEducacionGastos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Educacion"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- INTERNET -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_internet"
                    android:contentDescription="Internet" />

                <Button
                    android:id="@+id/btnInternetIGastos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Internet"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- RECIBO LUZ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_luz"
                    android:contentDescription="Recibos Luz" />

                <Button
                    android:id="@+id/btnReciboLuzGasto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Recibo de Luz"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTÓN VER GASTOS -->
    <Button
        android:id="@+id/btnMostrarGastos"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Ver gastos"
        android:textAllCaps="false"
        android:backgroundTint="#3C763F"
        android:elevation="4dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btnAtras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Botón Atrás (ABAJO EN MEDIO, igual que tenías) -->
    <Button
        android:id="@+id/btnAtras"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="Atrás"
        android:textAllCaps="false"
        android:drawableTop="@android:drawable/ic_menu_revert"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
