<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Estadisticas">

    <!-- SCROLLVIEW -->
    <ScrollView
        android:id="@+id/scrollEstadisticas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAtras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutContenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Selector Mes / Año -->
            <LinearLayout
                android:id="@+id/layoutPeriodo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#EEEEEE"
                android:orientation="horizontal"
                android:padding="2dp"
                android:elevation="4dp"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/btnMes"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#3C763F"
                    android:text="Mes"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btnAnio"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#DDDDDD"
                    android:text="Año"
                    android:textColor="#777777"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <!-- Filtros Mes -->
            <LinearLayout
                android:id="@+id/layoutFiltrosMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <Button
                    android:id="@+id/btnMesActual"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp"
                    android:text="Mes actual"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnMeses"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:spinnerMode="dropdown"/>

                <Button
                    android:id="@+id/btnMesAnterior"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp"
                    android:text="Mes anterior"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- CARD: gráfica -->
            <LinearLayout
                android:id="@+id/layoutGrafica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="6dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/txtTituloGrafica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Gráfico mensual de gastos"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/frameGraficaPastel"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="12dp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>

                <!-- RESUMEN -->
                <LinearLayout
                    android:id="@+id/layoutResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:background="#FAFAFA"
                    android:clipToOutline="true"
                    android:elevation="3dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Total Gastos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_delete"
                            android:tint="#D9534F" />

                        <TextView
                            android:id="@+id/tvTotalGastos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Total de Gastos: $0"
                            android:textColor="#D9534F"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Total Ingresos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_input_add"
                            android:tint="#5CB85C" />

                        <TextView
                            android:id="@+id/tvTotalIngresos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Total de Ingresos: $0"
                            android:textColor="#5CB85C"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Categoría con más gasto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            android:tint="#FF7043" />

                        <TextView
                            android:id="@+id/tvCategoriaMasGasto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Categoría con más gastos: -"
                            android:textColor="#444444"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Categoría con más ingreso -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            android:tint="#66BB6A" />

                        <TextView
                            android:id="@+id/tvCategoriaMasIngreso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Categoría con más ingresos: -"
                            android:textColor="#444444"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- BOTÓN GENERAR REPORTE -->
            <Button
                android:id="@+id/btnGenerarReporte"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#388E3C"
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:elevation="4dp"
                android:paddingLeft="16dp"
                android:text="Generar Reporte del Mes"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

    <!-- Botón atrás (fuera del scroll) -->
    <Button
        android:id="@+id/btnAtras"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:drawableTop="@android:drawable/ic_menu_revert"
        android:elevation="4dp"
        android:text="Atrás"
        android:textAllCaps="false"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
