<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Ingresos">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- BOTONES GASTOS / INGRESOS -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnGastos"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:backgroundTint="#DDDDDD"
            android:text="Gastos"
            android:textColor="#333333"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIngresos"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#3C763F"
            android:text="Ingresos"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- SCROLL DE CATEGORÍAS -->
    <ScrollView
        android:id="@+id/scrollViewIngresos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutBotones"
        app:layout_constraintBottom_toTopOf="@id/btnVerIngresos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutIngresos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:elevation="4dp"
            android:padding="24dp">

            <!-- SALARIO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_salario" />

                <Button
                    android:id="@+id/btnSalarioIngresos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Salario"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- INGRESOS EXTRA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_ingresos_extra" />

                <Button
                    android:id="@+id/btnIngresosExtras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Ingresos Extra"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- NEGOCIOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_negocios" />

                <Button
                    android:id="@+id/btnNegociosIngresos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Negocios"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- OTROS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_otros" />

                <Button
                    android:id="@+id/btnOtrosIngresos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEEEEE"
                    android:text="Otros"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTÓN VER INGRESOS -->
    <Button
        android:id="@+id/btnVerIngresos"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Ver Ingresos"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3C763F"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnAtras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÓN ATRÁS -->
    <Button
        android:id="@+id/btnAtras"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="Atrás"
        android:textAllCaps="false"
        android:drawableTop="@android:drawable/ic_menu_revert"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
