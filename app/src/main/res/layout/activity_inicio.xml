<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Inicio">

    <!-- ENCABEZADO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#FAFAFA"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="Logo"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/txtBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="¡Bienvenido!"
            android:textColor="#2E2E2E"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- CUERPO CON SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- FOTO -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgViewUsuario"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/usuario"
                app:shapeAppearanceOverlay="@style/CircleImage"
                android:elevation="5dp"/>

            <!-- NOMBRE -->
            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Nombre del usuario"
                android:textColor="#333333"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="correo@ejemplo.com"
                android:textColor="#7A7A7A"
                android:textSize="14sp" />

            <View
                android:layout_width="230dp"
                android:layout_height="1.5dp"
                android:layout_marginTop="20dp"
                android:background="#D0D0D0" />

            <!-- GRID -->
            <GridLayout
                android:id="@+id/gridMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="20dp"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- CARD TEMPLATE MÁS PROFESIONAL -->
                <!-- Cada card comparte el mismo estilo -->

                <!-- CATEGORÍAS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnIrCategorias"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:rippleColor="#3C763F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EDEDED"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_categoria" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Categorías"
                            android:textColor="#333333"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- GASTOS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnIrGastos"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:rippleColor="#3C763F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EDEDED"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_gastos" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Gastos"
                            android:textColor="#333333"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- INGRESOS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnIngresos"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:rippleColor="#3C763F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EDEDED"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_ingresos" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Ingresos"
                            android:textColor="#333333"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- ESTADÍSTICAS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnEstadistica"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:rippleColor="#3C763F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EDEDED"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_estadistica" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Estadísticas"
                            android:textColor="#333333"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- BOTÓN CERRAR SESIÓN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:text="Cerrar sesión"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                app:backgroundTint="#C62828" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
